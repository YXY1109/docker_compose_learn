# 使用 Paddle 官方镜像作为基础镜像
FROM ccr-2vdh3abv-pub.cnc.bj.baidubce.com/paddlepaddle/paddle:3.2.0

# 设置环境变量
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    TZ=Asia/Shanghai \
    DEBIAN_FRONTEND=noninteractive

# 更换为国内镜像源并安装系统依赖
RUN sed -i 's/archive.ubuntu.com/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list && \
    sed -i 's/security.ubuntu.com/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list && \
    apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        cmake \
        pkg-config \
        libpng-dev \
        libjpeg-dev \
        libffi-dev \
        libwebp-dev \
        libtiff-dev \
        libfreetype6-dev \
        liblcms2-dev \
        libopenjp2-7-dev \
        tk-dev \
        wget \
        unzip \
        git \
        curl \
        && rm -rf /var/lib/apt/lists/*

# 升级 pip 并更换为国内源
RUN pip install --upgrade pip setuptools wheel -i https://mirrors.tuna.tsinghua.edu.cn/pypi/web/simple

# 安装应用依赖和 PaddleOCR
RUN pip install --no-cache-dir \
    fastapi==0.120.4 \
    uvicorn==0.38.0 \
    Pillow==10.4.0 \
    safetensors==0.6.2 \
    pypdf==6.1.3 \
    numpy==2.2.6 \
    paddleocr[doc-parser]==3.2.0 \
    -i https://mirrors.tuna.tsinghua.edu.cn/pypi/web/simple

# 创建非 root 用户
RUN groupadd -r appgroup && \
    useradd -r -g appgroup -d /app -s /bin/bash appuser

# 设置工作目录
WORKDIR /app

# 复制应用代码
COPY --chown=appuser:appgroup requirements.txt ./
COPY --chown=appuser:appgroup . .

# 创建必要的目录
RUN mkdir -p /app/storage /app/logs && \
    chown -R appuser:appgroup /app

# 切换到非 root 用户
USER appuser

# 暴露端口
EXPOSE 5000

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:5000/health', timeout=5)" || exit 1

# 启动应用
CMD ["python", "start.py"]
# ============ Build Stage ============
FROM python:3.12.9-slim-bookworm AS builder

# Set build environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install build dependencies and runtime libraries
RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y --no-install-recommends \
    # Runtime libraries that Python packages need at runtime
    libglib2.0-0 \
    libgomp1 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    # Build tools (only for compilation, won't be copied to runtime)
    build-essential \
    curl \
    ca-certificates && \
    update-ca-certificates && \
    rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Upgrade pip and install wheel for faster compilation
RUN python -m ensurepip --upgrade && \
    pip install --upgrade pip setuptools wheel

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install heavy dependencies separately for better layer caching
RUN pip install --no-cache-dir \
        safetensors==0.6.2 \
        pypdf==6.1.3 && \
    pip install --no-cache-dir paddlepaddle==3.2.0 -i https://www.paddlepaddle.org.cn/packages/stable/cpu/ && \
    pip install --no-cache-dir paddleocr[doc-parser]==3.2.0

# ============ Runtime Stage ============
FROM python:3.12.9-slim-bookworm AS runtime

# Set runtime environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive \
    TIKTOKEN_CACHE_DIR=/app/data/cache/tiktoken_cache \
    NLTK_DATA=/app/data/cache/nltk_data \
    PATH="/home/appuser/.local/bin:$PATH"

# Install minimal runtime dependencies (no system libraries from apt)
RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y --no-install-recommends \
    libgl1 \
    ca-certificates && \
    update-ca-certificates && \
    rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user
RUN groupadd -r -g 1001 appgroup && \
    useradd -r -m -s /bin/bash -u 1001 -g 1001 appuser && \
    mkdir -p /app && \
    chown 1001:1001 /app

WORKDIR /app

# 关键部分：复制 Python 环境和系统库从 builder 阶段
# 1. 复制 Python 包和可执行文件
COPY --from=builder /usr/local /usr/local

# 2. 复制系统共享库（这些是 apt-get 安装的运行时依赖）
COPY --from=builder /usr/lib/x86_64-linux-gnu /usr/lib/x86_64-linux-gnu

# 3. 复制系统共享数据（如 glib 的模式文件等）
COPY --from=builder /usr/share /usr/share

# 4. 复制动态链接器配置
COPY --from=builder /etc/ld.so.cache /etc/

# 复制应用代码
COPY --chown=1001:1001 requirements.txt ./
COPY --chown=1001:1001 start.py ./

# 创建必要目录
RUN mkdir -p /app/data/cache /app/storage /app/logs && \
    chown -R 1001:1001 /app && \
    chmod -R 755 /app && \
    chmod -R 700 /app/data/cache /app/storage /app/logs

USER 1001

EXPOSE 5000
CMD ["python", "start.py"]